{
  "manifest_version": 2,
  "name": "AcroVault",
  "description": "AcroVault is a tool for looking up Acronyms ",
  "version": "0.0.1",
  "permissions": ["storage"],
  "icons": {
    "64": "icons/icon.png"
  },
  "background": {
    "scripts": ["background_script.js"],
    "persistent": false,
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*"],
      "js": ["content_script.js"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "64": "icons/icon.png"
    },
    "default_popup": "index.html",
    "default_title": "AcroVault"
  }
}
