{
  "manifest_version": 3,
  "name": "AcroVault",
  "description": "AcroVault is a tool for looking up Acronyms ",
  "version": "0.0.1",
  "permissions": ["storage", "sidePanel"],
  "icons": {
      "16":"icons/icon16.png",
      "32":"icons/icon32.png",
      "64": "icons/icon64.png"
  },
  "sidebar_action": {
    "default_panel":"index.html"
  },
  "background": {
    "scripts": ["background_script.js"],
    "persistent": false,
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*"],
      "js": ["content_script.js"]
    }
  ],
  "action": {
    "default_icon": {
      "16":"icons/icon16.png",
      "32":"icons/icon32.png",
      "64": "icons/icon64.png"
    },
    "default_popup": "index.html",
    "default_title": "AcroVault"
  }
}
